# Environment Configuration for WoW RAG API

# Server Configuration
PORT=3000
NODE_ENV=development

# Embeddings Configuration
# Provider options: 'local' or 'huggingface'
EMBEDDINGS_PROVIDER=local
# URL for local embeddings server (only used when EMBEDDINGS_PROVIDER=local)
EMBEDDINGS_API_URL=http://localhost:8000
# HuggingFace API Key (only used when EMBEDDINGS_PROVIDER=huggingface)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Blizzard API Configuration
BLIZZARD_CLIENT_ID=your_blizzard_client_id
BLIZZARD_CLIENT_SECRET=your_blizzard_client_secret

# LangSmith Configuration (optional)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
